@model IEnumerable<MyClass.Models.Category>

@{
    ViewBag.Title = "Thùng rác danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header {

    <link href="~/Assets/admin/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {

    <script src="~/Assets/admin/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper my-2">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng rác danh mục slider</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a class="btn btn-sm btn-info" href="@Url.Action("Index","Category")"><i class="fas fa-backward"></i>  Quay về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th>Tên danh mục</th>
                            <th>Slug</th>
                            <th> Ngày tạo</th>
                            <th class="text-center" style="width:120px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="checkId" value="" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>

                                <td class="text-center">

                                    <a href="@Url.Action("Retrash","Category" ,new { id = item.ID })" class="btn btn-sm btn-info"><i class="fas fa-undo-alt"></i></a>
                                    <a href="@Url.Action("Delete","Category", new { id = item.ID })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                                <td>
                                    @item.ID
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->