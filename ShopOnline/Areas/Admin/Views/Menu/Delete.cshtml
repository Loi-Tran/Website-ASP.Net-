@model MyClass.Models.Menu

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper my-2">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Xác nhận xóa danh mục</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Edit", "Menu", new { id = Model.ID })" class="btn btn-sm btn-success"><i class="fas fa-edit"></i>Cập nhật</a>
                            <a class="btn btn-sm btn-info" href="@Url.Action("Index", "Menu")"><i class="fas fa-backward"></i>  Quay về danh sách</a>
                            <button class="btn btn-sm btn-danger" type="submit"><i class="fas fa-trash-alt"></i>Xóa</button>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px">Tên trường</th>
                        <th>Nội dung</th>
                    </tr>
                    <tr>
                        <td>Tên menu</td>
                        <td> @Html.DisplayFor(model => model.Text)</td>
                    </tr>
                    <tr>
                        <td>Liên kết</td>
                        <td>@Html.DisplayFor(model => model.Link)</td>
                    </tr>
                    <tr>
                        <td>Sắp xếp</td>
                        <td> @Html.DisplayFor(model => model.DisplayOrder)</td>
                    </tr>
                    <tr>
                        <td>Kiểu menu</td>
                        <td> @Html.DisplayFor(model => model.TypeMenu)</td>
                    </tr>
                    <tr>
                        <td>Vị trí</td>
                        <td>@Html.DisplayFor(model => model.Position)</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo</td>
                        <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                    </tr>
                    <tr>
                        <td>Người tạo</td>
                        <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                    </tr>
                    <tr>
                        <td>Ngày cập nhập</td>
                        <td> @Html.DisplayFor(model => model.ModifieDate)</td>
                    </tr>
                    <tr>
                        <td>Người nhập</td>
                        <td> @Html.DisplayFor(model => model.ModifieBy)</td>
                    </tr>
                    <tr>
                        <td>Cấp cha</td>
                        <td>  @Html.DisplayFor(model => model.ParentID)</td>
                    </tr>
                    <tr>
                        <td>Bảng ID</td>
                        <td> @Html.DisplayFor(model => model.TableID)</td>
                    </tr>
                    <tr>
                        <td>Trạng thái</td>
                        <td>  @Html.DisplayFor(model => model.Status)</td>
                    </tr>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
