@model MyClass.Models.Product

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper my-2">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Chi tiết danh mục sản phẩm</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit","Product" ,new { id = Model.ID })" class="btn btn-sm btn-success"><i class="fas fa-edit"></i>Cập nhật</a>
                        <a class="btn btn-sm btn-info" href="@Url.Action("Index","Product")"><i class="fas fa-backward"></i>  Quay về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px">Tên trường</th>
                        <th>Nội dung</th>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm</td>
                        <td> @Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td> Mã sản phẩm</td>
                        <td>@Html.DisplayFor(model => model.Code)</td>
                    </tr>
                    <tr>
                        <td>Loại sản phẩm</td>
                        <td>@Html.DisplayFor(model => model.CategoryID)</td>
                    </tr>
                    <tr>
                        <td>Chi tiết</td>
                        <td>@Html.DisplayFor(model => model.Detail)</td>
                    </tr>
                    <tr>
                        <td>Liên kết</td>
                        <td> @Html.DisplayFor(model => model.Slug)</td>
                    </tr>
                    <tr>
                        <td>Mô tả sản phẩm</td>
                        <td> @Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <td>Hình</td>
                        <td>@Html.DisplayFor(model => model.Image)</td>
                    </tr>
                    <tr>
                        <td>Danh sách hình</td>
                        <td>@Html.DisplayFor(model => model.MoreImages)</td>
                    </tr>
                    <tr>
                        <td>Giá</td>
                        <td>@Html.DisplayFor(model => model.Price)</td>
                    </tr>
                    <tr>
                        <td>Giá khuyến mãi</td>
                        <td>@Html.DisplayFor(model => model.PromotionPrice)</td>
                    </tr>
                   
                    <tr>
                        <td>Số lượng</td>
                        <td>@Html.DisplayFor(model => model.Quantity)</td>
                    </tr>
                  
                    <tr>
                        <td>Ngày tạo</td>
                        <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                    </tr>
                    <tr>
                        <td>Người tạo</td>
                        <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                    </tr>
                    <tr>
                        <td>Ngày cập nhật</td>
                        <td> @Html.DisplayFor(model => model.ModifieDate)</td>
                    </tr>
                    <tr>
                        <td>Người cập nhật</td>
                        <td> @Html.DisplayFor(model => model.ModifieBy)</td>
                    </tr>
                    <tr>
                        <td>Từ khóa</td>
                        <td>  @Html.DisplayFor(model => model.MetaKeywords)</td>
                    </tr>
                    <tr>
                        <td> Mô tả</td>
                        <td> @Html.DisplayFor(model => model.MetaDescriptions)</td>
                    </tr>

                    <tr>
                        <td> Trạng thái</td>
                        <td>  @Html.DisplayFor(model => model.Status)</td>
                    </tr>
                  
                    <tr>
                        <td> Số lượt xem</td>
                        <td> @Html.DisplayFor(model => model.ViewCount)</td>
                    </tr>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
