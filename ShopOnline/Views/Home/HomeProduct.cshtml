@model IEnumerable<MyClass.Models.ProductInfo>
@{
    var category = ViewBag.Category;
}
@if (Model.Count() != 0)
{
    <div class="position-relative animated wow fadeInLeft" data-wow-delay=".5s">
        <h2 class="text-center text-uppercase">@category.Name</h2>

    </div>
    <div class="row">
        <div class="container">

            @foreach (var product in Model)
            {
                <div class="col-md-3 col-md2 animated wow fadeInLeft" data-wow-delay=".5s">
                    <div class="col-md1 simpleCart_shelfItem">
                        <a href="~/@product.Slug">
                            <img class="img-responsive" src="~/Assets/client/images/products/@product.Image" alt="" />
                        </a>
                        <h3><a href="~/@product.Slug">@product.Name</a></h3>
                        <div class="price">
                            <h5 class="item_price">@string.Format("{0:0,0}", product.PromotionPrice)đ</h5>
                            <a href="@Url.Action("CartAdd","Giohang", new {productid=product.ID })" class="item_add ">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                            <div class="clearfix"> </div>
                        </div>

                    </div>
                </div>
            }


        </div>
    </div>
    <div class="text-right "><a href="~/@category.Slug">Xem tất cả</a></div>
}