@model IEnumerable<MyClass.Models.Category>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@section header {
    <link href="~/Assets/client/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Assets/client/owlcarousel/assets/owl.theme.default.min.css" rel="stylesheet" />
    <script src="~/Assets/client/owlcarousel/owl.carousel.min.js"></script>

}
@Html.Action("Slideshow", "Module")

<!--content-->

<div class="content">
    <div class="container">
        <div class="content-top">
            <div class="con-tp">
                <div class="container">
                    <div class="col-md-4 con-tp-lft animated wow fadeInLeft" data-wow-delay=".5s">
                        <a href="products/.html">
                            <div class="content-grid-effect slow-zoom vertical">
                                <div class="img-box"><img src="~/Assets/client/images/products/6.jpg" alt="image" class="img-responsive zoom-img"></div>
                                <div class="info-box">
                                    <div class="info-content simpleCart_shelfItem">
                                        <h4>30%offer</h4>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4 con-tp-lft animated wow fadeInDown animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInDown;">
                        <a href="products/.html">
                            <div class="content-grid-effect slow-zoom vertical">
                                <div class="img-box"><img src="~/Assets/client/images/products/10.jpg" alt="image" class="img-responsive zoom-img"></div>
                                <div class="info-box">
                                    <div class="info-content simpleCart_shelfItem">
                                        <h4>45%offer</h4>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4 con-tp-lft animated wow fadeInRight" data-wow-delay=".5s">
                        <a href="products/.html">
                            <div class="content-grid-effect slow-zoom vertical">
                                <div class="img-box"><img src="~/Assets/client/images/products/9.jpg" alt="image" class="img-responsive zoom-img"></div>
                                <div class="info-box">
                                    <div class="info-content simpleCart_shelfItem">
                                        <h4>50%offer</h4>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <div class="col-md-4 con-tp-lft animated wow fadeInLeft" data-wow-delay=".5s">
                        <a href="products/.html">
                            <div class="content-grid-effect slow-zoom vertical">
                                <div class="img-box"><img src="~/Assets/client/images/products/12.jpg" alt="image" class="img-responsive zoom-img"></div>
                                <div class="info-box">
                                    <div class="info-content simpleCart_shelfItem">
                                        <h4>25%offer</h4>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4 con-tp-lft animated wow fadeInUp animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
                        <a href="products/.html">
                            <div class="content-grid-effect slow-zoom vertical">
                                <div class="img-box"><img src="~/Assets/client/images/products/13.jpg" alt="image" class="img-responsive zoom-img"></div>
                                <div class="info-box">
                                    <div class="info-content simpleCart_shelfItem">
                                        <h4>50%offer</h4>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4 con-tp-lft animated wow fadeInRight" data-wow-delay=".5s">
                        <a href="products/.html">
                            <div class="content-grid-effect slow-zoom vertical">
                                <div class="img-box"><img src="~/Assets/client/images/products/14.jpg" alt="image" class="img-responsive zoom-img"></div>
                                <div class="info-box">
                                    <div class="info-content simpleCart_shelfItem">
                                        <h4>35%offer</h4>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
               
                </div>
            </div>
            <div class="c-btm">
                <div class="content-top1">
                    @foreach (var category in Model)
                    {
                        @Html.Action("HomeProduct", "Home", new { @id = category.ID })
                       
                    }
                </div>
            </div>

        </div>
    </div>
</div>
